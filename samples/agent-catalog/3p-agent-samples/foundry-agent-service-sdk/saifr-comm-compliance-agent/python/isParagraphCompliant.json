{
  "openapi": "3.1.0",
  "info": {
    "title": "Retail Marketing Compliance Server",
    "description": "Retail Marketing Compliance Service",
    "version": "3.3.0"
  },
  "servers": [
    {
      "url": "{{place Saifr Retail Marketing Comoliance endpoint here}}"
    }
  ],
  "paths": {
    "/score": {
      "post": {
        "summary": "Predict",
        "operationId": "isParagraphCompliant",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Request"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "Request": {
        "properties": {
          "text": {
            "type": "string",
            "title": "Text"
          },
          "risk_level": {
            "$ref": "#/components/schemas/RestRiskLevel"
          }
        },
        "type": "object",
        "required": [
          "text",
          "risk_level"
        ],
        "title": "Request"
      },
      "Response": {
        "properties": {
          "findings": {
            "items": {
              "$ref": "#/components/schemas/RetailMarketingComplianceFinding"
            },
            "type": "array",
            "title": "Findings"
          }
        },
        "type": "object",
        "required": [
          "findings"
        ],
        "title": "Response"
      },
      "ResponseCategory": {
        "type": "string",
        "enum": [
          "Promissory",
          "Misleading",
          "Exaggerated",
          "Unwarranted"
        ],
        "title": "ResponseCategory"
      },
      "ResponseLabel": {
        "type": "string",
        "enum": [
          "Balanced",
          "NotBalanced"
        ],
        "title": "ResponseLabel"
      },
      "RestRiskLevel": {
        "type": "string",
        "enum": [
          "Low",
          "Medium",
          "High"
        ],
        "title": "RestRiskLevel"
      },
      "RetailMarketingComplianceFinding": {
        "properties": {
          "sentence": {
            "type": "string",
            "title": "Sentence"
          },
          "label": {
            "$ref": "#/components/schemas/ResponseLabel"
          },
          "risk_level": {
            "$ref": "#/components/schemas/RestRiskLevel"
          },
          "categories": {
            "items": {
              "$ref": "#/components/schemas/ResponseCategory"
            },
            "type": "array",
            "title": "Categories"
          }
        },
        "type": "object",
        "required": [
          "sentence",
          "label",
          "risk_level",
          "categories"
        ],
        "title": "RetailMarketingComplianceFinding"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}
